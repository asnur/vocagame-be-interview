# .env file for Voca Wallet application
APP_NAME=
APP_VERSION=
APP_KEY=
APP_CURRENCY_DEFAULT=

# Server Configuration
SERVER_HOST=
SERVER_PORT=

# PostgreSQL Configuration
POSTGRES_HOST=
POSTGRES_PORT=
POSTGRES_DATABASE=
POSTGRES_USERNAME=
POSTGRES_PASSWORD=

# JWT/Token Configuration
JWK_KID=

# RSA Keys for JWT signing and verification
# Note: Replace these with your actual RSA keys in production
ACCESS_TOKEN_RSA256_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
YOUR_RSA_PRIVATE_KEY_HERE
-----END RSA PRIVATE KEY-----"

ACCESS_TOKEN_RSA256_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
YOUR_RSA_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----"

# Token timing configuration
TOKEN_IAT_LEEWAY=                      # Time leeway for issued at time (e.g., 5m)
ACCESS_TOKEN_VALID_FOR=                # Access token validity period (e.g., 15m)
REFRESH_TOKEN_VALID_FOR=               # Refresh token validity period (e.g., 168h)

# Token issuer and audience configuration
TOKEN_ISSUER=
TOKEN_AUDIENCES=